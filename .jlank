#/bin/bash

# Load ~/.jlank/.extra, ~/.jlank/.bash_prompt,
# ~/.jlank/.exports, ~/.jlank/.aliases, and ~/.jlank/.functions
# ~.jlank/.extra can be used for settings you donâ€™t want to commit
for file in ~/.jlank/.{extra,bash_prompt,exports,aliases,functions}; do
	[ -r "$file" ] && . "$file"
done
unset file

if [ ! -d ~/.vim/backups ]; then
  mkdir ~/.vim/backups
fi

if [ ! -d ~/.vim/swaps ]; then
  mkdir ~/.vim/swaps
fi

# Source some run control files
#export INPUTRC="~/.jlank/.inputrc"
bind -f ~/.jlank/.inputrc
export VIMINIT="~/.jlank/.vimrc"
export GIT_CONFIG="~/.jlank/.gitconfig"
